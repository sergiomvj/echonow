# ===========================================
# EchoNow Environment Configuration
# ===========================================

# Application
NODE_ENV=development
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-jwt-key-here-minimum-32-characters

# Database - PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/echonow_dev

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=echonow_dev
DB_USER=postgres
DB_PASSWORD=your-password

# Authentication Providers
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GITHUB_ID=your-github-oauth-app-id
GITHUB_SECRET=your-github-oauth-app-secret

# AI Services
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=org-your-openai-organization-id
ELEVENLABS_API_KEY=your-elevenlabs-api-key-for-voice-synthesis

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
STRIPE_PRICE_ID_PREMIUM=price_your-premium-plan-price-id
STRIPE_PRICE_ID_PRO=price_your-pro-plan-price-id

# Content & Media
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Services (optional)
RESEND_API_KEY=re_your-resend-api-key
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Analytics (optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
POSTHOG_KEY=phc_your-posthog-key

# Rate Limiting & Security
REDIS_URL=redis://localhost:6379
JWT_SECRET=your-additional-jwt-secret-for-api-tokens

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_AI_FEATURES=true
ENABLE_PREMIUM_FEATURES=true
ENABLE_ANALYTICS=true

# Development Tools
PRISMA_GENERATE_DATAPROXY=false
SKIP_ENV_VALIDATION=false